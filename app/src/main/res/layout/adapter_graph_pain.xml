<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/make_selection_sms_box"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="0dp">

        <TextView
            android:id="@+id/painvalue"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/poppinsbold"
            android:src="@drawable/all_patients"
            android:text="Pain Value:"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/admission_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/painvalue"
            android:fontFamily="@font/poppinsbold"
            android:text="Admission ID:"
            android:textColor="@color/green"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mrn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/admission_title"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@id/painvalue"
            android:fontFamily="@font/poppinsbold"
            android:text="MRN:"
            android:textColor="@color/green"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/time_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mrn_title"
            android:layout_toRightOf="@id/painvalue"
            android:fontFamily="@font/poppinsbold"
            android:text="Time:"
            android:textColor="@color/black"
            android:textSize="11sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="78dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/make_selection_sms_box"
        android:background="#F1B2F1"
        android:text="Delete" />
</RelativeLayout>