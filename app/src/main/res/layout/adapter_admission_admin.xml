<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/make_selection_sms_box"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="0dp">

        <TextView
            android:id="@+id/bednumber"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/image_des"
            android:fontFamily="@font/poppinsbold"
            android:src="@drawable/all_patients"
            android:text="Bed Number"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/admission_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/bednumber"
            android:fontFamily="@font/poppinsbold"
            android:text="Admission ID:"
            android:textColor="@color/green"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mrn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@id/bednumber"
            android:layout_below="@id/admission_title"
            android:fontFamily="@font/poppinsbold"
            android:text="MRN:"
            android:textColor="@color/green"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/gender_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mrn_title"
            android:layout_toRightOf="@id/bednumber"
            android:fontFamily="@font/poppinsbold"
            android:text="Gender"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/starttime_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender_des"
            android:layout_toRightOf="@id/bednumber"
            android:fontFamily="@font/poppinsbold"
            android:text="Start Time:"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/endtime_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/starttime_des"
            android:layout_toRightOf="@id/bednumber"
            android:fontFamily="@font/poppinsbold"
            android:text="End Time:"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/image_des"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            >

        </ImageView>
    </RelativeLayout>

</RelativeLayout>